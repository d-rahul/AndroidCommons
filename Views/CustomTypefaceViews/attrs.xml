<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AppTextView">
        <attr name="font_type" />
    </declare-styleable>
    <declare-styleable name="AppEditText">
        <attr name="font_type" />
    </declare-styleable>
    <declare-styleable name="AppCheckBox">
        <attr name="font_type" />
    </declare-styleable>
    <declare-styleable name="AppBotton">
        <attr name="font_type" />
    </declare-styleable>

    <declare-styleable name="AppRadioButton">
        <attr name="font_type" />
    </declare-styleable>
    <attr name="font_type">
        <enum name="regular" value="1" />
        <enum name="light" value="2" />
        <enum name="bold" value="3" />
        <enum name="semibold" value="4" />
        <enum name="medium" value="5" />
    </attr>

    <declare-styleable name="AppCircularImageView">
        <attr name="border" format="boolean"/>
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
        <attr name="shadow" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="RangeSeekBar">
        <attr name="absoluteMinValue" format="integer|float" />
        <attr name="absoluteMaxValue" format="integer|float" />
        <attr name="textColor" format="color" />
        <attr name="filledColor" format="color" />
        <attr name="unfilledColor" format="color" />
        <attr name="singleThumb" format="boolean" />
        <attr name="font_type" />
    </declare-styleable>


    <declare-styleable name="HorizontalNumberPicker">
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="values" format="reference" />
        <attr name="android:ellipsize" />
        <attr name="android:marqueeRepeatLimit" />
        <attr name="dividerSize" format="dimension" />
        <attr name="sideItems" format="integer" />
    </declare-styleable>

    <declare-styleable name="OtpView">
        <attr name="android:inputType" />
        <attr name="android:textColor" />
        <attr name="text_background_color" format="color" />
        <attr name="otp" format="string" />
    </declare-styleable>

    <attr name="horizontalPickerStyle" format="reference" />

    <declare-styleable name="StickyScrollView">
        <attr name="stuckShadowHeight" format="dimension" />
        <attr name="stuckShadowDrawable" format="reference" />
    </declare-styleable>
</resources>